<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BF9A"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hussain.savehuman.ThirdActivity"
    android:orientation="vertical">

    <TextView
        android:text="First Choose The Blood Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_third"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_g">

        <RadioButton
            android:text="A+ BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/A1_radioButton"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="A- BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/A2_radioButton"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:text="AB+ BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AB1_radioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="AB- BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AB2_radioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="B+ BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/B1_radioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="B- BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/B2_radioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="O+ BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/O1_radioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="O- BLOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/O2_radioButton"
            android:layout_weight="1" />

    </RadioGroup>

    <Button
        android:text="SEARCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#cddc39"
        android:id="@+id/search_btn" />

    <Button
        android:text="VIEW LIST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#cddc39"
        android:id="@+id/listButton_txt" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#cddc39"
        android:id="@+id/Update_button"
        android:text="UPDATE PROFILE" />
</LinearLayout>
